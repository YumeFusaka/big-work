<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.yumefusaka.bigwork.controller.PublisherController"
      spacing="10" style="-fx-padding: 10 10 10 10;">

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="搜索出版社..." prefWidth="200"/>
        <Button text="搜索" onAction="#handleSearch"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="新增" onAction="#handleAdd"/>
        <Button text="编辑" onAction="#handleEdit"/>
        <Button text="删除" onAction="#handleDelete"/>
    </HBox>

    <TableView fx:id="publisherTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="nameColumn" text="出版社名称"/>
            <TableColumn fx:id="addressColumn" text="地址"/>
            <TableColumn fx:id="contactColumn" text="联系方式"/>
        </columns>
    </TableView>
</VBox> 