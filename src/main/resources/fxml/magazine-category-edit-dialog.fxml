<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.yumefusaka.bigwork.controller.MagazineCategoryEditDialogController"
          hgap="10" vgap="10"
          style="-fx-padding: 20;">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="类别名称:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    
    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="1" GridPane.columnIndex="0" 
          GridPane.columnSpan="2">
        <Button text="确定" onAction="#handleOk"/>
        <Button text="取消" onAction="#handleCancel"/>
    </HBox>
</GridPane> 