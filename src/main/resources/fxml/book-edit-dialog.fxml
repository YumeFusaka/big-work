<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.yumefusaka.bigwork.controller.BookEditDialogController"
          hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="书名:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="出版社:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ComboBox fx:id="publisherComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="类别:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <ComboBox fx:id="categoryComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="总数量:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="totalQuantityField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="可用数量:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="availableQuantityField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="价格:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="6">
        <Button text="确定" onAction="#handleOk"/>
        <Button text="取消" onAction="#handleCancel"/>
    </HBox>
</GridPane> 