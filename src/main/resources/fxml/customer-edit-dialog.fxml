<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.yumefusaka.bigwork.controller.CustomerEditDialogController"
          hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="姓名:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="电话:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="邮箱:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.columnIndex="0" 
          GridPane.columnSpan="2" GridPane.rowIndex="3">
        <Button text="确定" onAction="#handleOk"/>
        <Button text="取消" onAction="#handleCancel"/>
    </HBox>
</GridPane> 